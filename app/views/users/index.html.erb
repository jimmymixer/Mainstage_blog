
  <body>
  <div class="parallax">
    <%= image_tag("edm.jpg", :alt => "rss feed") %>

  </div>

  <div class="container">
      <main>
          <center>
            <div class="section"></div>
            <div class="section"></div>
            <div class="container">
                <div class="z-depth-1 grey lighten-4 row" style="display: inline-block; padding: 32px 48px 20px 48px; border: 1px solid #EEE; margin-top: 85px;">
                    <form action="/login" class="col s12" method="post">
                        <div class='row'>
                            <div class='col s12'></div>
                        </div>
                        <!-- Login error -->
                        <% if flash[:error] %>
                          <p style="color: red"><%= flash[:error] %></p>
                        <% end %>
                        <!-- Login error -->
                        <div class='row'>
                            <div class='input-field col s12'>
                                <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
                                <input class='validate' type='email' name='email' id='email'/>
                                <label for='email'>Enter your email</label>
                            </div>
                        </div>

                        <div class='row'>
                            <div class='input-field col s12'>
                                <input class='validate' type='password' name='password' id='password'/>
                                <label for='password'>Enter your password</label>
                            </div>
                            <label style='float: right;'>
                                <a class='pink-text' href='#!'>
                                    <b>Forgot Password?</b>
                                </a>
                            </label>
                        </div>

                        <br/>
                        <center>
                            <div class='row'>
                                <button type='submit' name='btn_login' class='col s12 btn btn-large waves-effect indigo'>Login</button>
                                <a href="/users/new">Create account</a>
                            </div>
                        </center>
                    </form>
                </div>
              </div>
          </center>
        <div class="section"></div>
        <div class="section"></div>
      </main>
  </div>
  <div class="main-content">
      <div class="container"></div>
  </div>

</body>
